<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/yellow_background_b">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center|top"
        android:src="@drawable/mainpic"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/idEmailLogin"
        android:fontFamily="@font/myfont"
        android:hint="Email"
        android:background="@drawable/whitebackground"
        android:maxLines="1"
        android:padding="5dp"
        android:imeOptions="actionNext"
        />

    <EditText

        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/idPassLogin"
        android:fontFamily="@font/myfont"
        android:inputType="textPassword"
        android:hint="Password"
        android:maxLines="1"
        android:padding="5dp"
        android:background="@drawable/whitebackground"
        android:maxLength="26"
        android:imeOptions="actionNext"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/idButtonLogin"
        android:text="Login"
        android:fontFamily="@font/myfont"
        android:textSize="15dp"
        android:textColor="#00643c"
        android:background="@drawable/green_corner_background"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:layout_gravity="center"
            android:fontFamily="@font/myfont"
            android:textColor="#bb7300"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Click here!"
            android:fontFamily="@font/myfont"
            android:layout_gravity="center"
            android:textColor="#bb2f00"
            android:id="@+id/forgotPass"

            />
    </LinearLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/idFacebookLogin"
        android:text="Login with Facebook"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/myfont"
        android:background="@drawable/blue_corner_background"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/idGoogleLogin"
        android:text="Login with Google"
        android:fontFamily="@font/myfont"
        android:textSize="15dp"
        android:textColor="#00643c"
        android:background="@drawable/green_corner_background"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/idRegisterText"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/myfont"
        android:text="Register?"
        android:textColor="#bb7300"/>

</LinearLayout>